<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/registrationback"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.project.followme.RegistrationActivity" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

    <EditText
        android:id="@+id/tbPhoneNumberReg"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tbPasswordReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:alpha="0.7"
        android:background="@drawable/inputfield"
        android:drawableLeft="@drawable/telicon"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textSize="20sp" >

    </EditText>

    <EditText
        android:id="@+id/tbPasswordReg"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tbPhoneNumberReg"
        android:layout_below="@+id/tbEmailReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:alpha="0.7"
        android:background="@drawable/inputfield"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tbNameReg"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:alpha="0.7"
        android:background="@drawable/inputfield"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="20sp" >

        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/tbEmailReg"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tbNameReg"
        android:layout_below="@+id/tbNameReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:alpha="0.7"
        android:background="@drawable/inputfield"
        android:drawableLeft="@drawable/emailicon"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="20sp" >

    </EditText>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/btnRegister"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/backbtn" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/tbPhoneNumberReg"
        android:layout_below="@+id/tbPhoneNumberReg"
        android:layout_marginRight="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/registerbtn" />

</RelativeLayout>